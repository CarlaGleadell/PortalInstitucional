<?xml version="1.0" encoding="utf-8"?>
<form>

	<!--config>
		<inlinehelp button="show"/>
	</config-->


	<fieldset>

		<field
			name="userid"
			type="user"
			label="COM_ICAGENDA_REGISTRATION_USERID"
			default="0"
			size="10"
			onchange="setUserID()"
		/>

		<field
 			name="name"
 			type="text"
 			label="COM_ICAGENDA_REGISTRATION_NAME"
			size="30"
			required="true"
		/>

		<field
			name="email"
			type="email"
			label="COM_ICAGENDA_REGISTRATION_EMAIL"
			class="inputbox"
			size="30"
			filter="safehtml"
		/>

		<field
			name="phone"
			type="text"
			label="COM_ICAGENDA_REGISTRATION_PHONE"
			class="inputbox"
			size="30"
			filter="safehtml"
		/>

		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			class="readonly"
			size="10"
			readonly="true"
		/>

		<field
			name="eventid"
			type="icagenda.EventsList"
			label="ICEVENT"
			default="0"
			class="form-select"
			size="10"
			readonly="true"
		/>

		<field
			name="date"
			type="icagenda.EventDatesList"
			label="COM_ICAGENDA_REGISTRATION_DATE"
			class="form-select"
			size="30"
			filter="safehtml"
		/>

		<field
			name="period"
			type="hidden"
			default="0"
		/>

		<field
			name="people"
			type="text"
			label="COM_ICAGENDA_REGISTRATION_NUMBER_PLACES"
			default="1"
			class="inputbox input-mini"
			size="30"
			filter="safehtml"
		/>

		<field
			name="data_people"
			type="hidden"
			default=""
		/>

		<field
			name="notes"
			type="editor"
			label="COM_ICAGENDA_REGISTRATION_NOTES_DISPLAY_LABEL"
			class="inputbox"
			buttons="readmore,pagebreak"
			filter="\Joomla\CMS\Component\ComponentHelper::filterText"
		/>

		<field
			name="custom_fields"
			type="hidden"
			default=""
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			default="1"
			size="1"
			filter="intval"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			readonly="true"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		/>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"
		/>

		<field
			name="status"
			type="list"
			label="COM_ICAGENDA_REGISTRATION_STATE"
			description=""
			default="1"
			size="1"
			filter="intval"
			>
			<option value="2">IC_PENDING</option>
			<option value="1">IC_COMPLETED</option>
			<option value="0">IC_CANCELLED</option>
			<!--option value="-1">IC_ERROR</option-->
			<!--option value="-2">IC_ABANDONED</option-->
		</field>

		<field
			name="itemid"
			type="hidden"
			default=""
			filter="unset"
		/>
	</fieldset>
</form>
